root = true

[*]
charset = UTF-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile, *.mk}]
indent_style = tab

[{var/classes/definition_*.php,config/pimcore/classes/definition_*.php}]
insert_final_newline = false
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[.infra/secrets/*]
insert_final_newline = false
trim_trailing_whitespace = false
